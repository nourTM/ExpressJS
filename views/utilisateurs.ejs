<h1>Liste Des Utilisateurs</h1>
<% if( utilisateurs.length == 0 ) {%> <h3> pas d'utilisateur</h3><%}%>

<% if( utilisateurs.length != 0){%>
<table border="2">
    <%for(var i=0;i<utilisateurs.length;i++) {%>
        <tr>
            <form method="post">
                <td><%=utilisateurs[i].id%></td>
                <td><%=utilisateurs[i].login%></td>
                <td><%=utilisateurs[i].pwd%></td>
                <td>
                    <input type="hidden" name="id" value="<%=utilisateurs[i].id%>">
                    <label for="login">Login:</label><input type="text" name="login" id="login" value="<%=utilisateurs[i].login%>">
                    <label for="pwd">Mot de passe:</label><input type="password" name="pwd" id="pwd" value="<%=utilisateurs[i].pwd%>">
                    <input type="submit" value="Modifier" formaction="/utilisateur/mod">
                </td>
                <td>
                    <input type="submit" value="Supprimer" formaction="/utilisateur/supp">
                </td>
            </form>
        </tr>
    <% } %>
</table>
<% } %>

<a href="/utilisateur/nouveau"><button>Ajouter</button></a>
